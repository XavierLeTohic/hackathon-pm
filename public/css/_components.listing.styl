.productPage-main
  .listing
    position relative
    padding-bottom 0

    &.fadeBottom:after
      content ''
      position absolute
      bottom 0em
      left 0
      width 100%
      height 4em
      background -webkit-linear-gradient(
        rgba(255, 255, 255, 0) 0%,
        rgba(255, 255, 255, 1) 100%
      )
      background-image linear-gradient(
        rgba(255, 255, 255, 0) 0%,
        rgba(255, 255, 255, 1) 100%
      )

    &.fadeTop:before
      content ''
      position absolute
      top 40px
      left 0
      width 100%
      height 4em
      background -webkit-linear-gradient(to bottom,
        rgba(255, 255, 255,1) 0%,
        rgba(255, 255, 255, 0) 100%
      )
      background-image linear-gradient(to bottom,
        rgba(255, 255, 255,1) 0%,
        rgba(255, 255, 255, 0) 100%
      )

    .listing-header
      .label
        flex-grow 1

    .advertList
      max-height 400px
      overflow-x hidden
      overflow-y scroll
      margin-left -20px
      margin-right -20px

      &::-webkit-scrollbar
        display: none

      &::scrollbar
        display: none

      .advertListItem
        transition background-color 1s
        border-top 1px solid $colorSeparator
        padding-left 20px
        padding-right 20px

        &.selected
        &:hover
          background-color $colorLink

          .advertItem
            color $white

            .shippingAmount
              color lighten($colorText, 80%)

        &:first-child
          border-top none

  .advertItem
    padding $miniSpacer 0
    color $colorText
    border-top 1px solid $colorSeparator
    margin-bottom 0
    p
      margin-bottom 0

    .shippingAmount
      color lighten($colorText, 50%)
    p
      margin-bottom 0

    &:first-child
      border-top none

