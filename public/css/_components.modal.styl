.modal-backdrop
  display none
  top 0
  left 0
  width 100%
  height 100%
  position fixed
  opacity 0
  background-color rgba(255, 255, 255, 0.7)
  z-index 10

  &.show
    display block
    opacity 1

  .modalTitle
    padding-left $spacerBase
    margin-bottom $spacerBase

  .modal
    top 0
    left 0
    width 920px
    max-height 500px
    position fixed
    overflow auto
    background-color white

.reviewsItem
  display -webkit-box
  display -webkit-flex
  display -ms-flexbox
  display flex

  .customerProfile
    flex 1
  .customerMessage
    flex 2
