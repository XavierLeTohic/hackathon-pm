.modal-backdrop
  display none
  top 0
  left 50%
  width 100%
  height 100%
  position fixed
  opacity 0
  transform translateX(-50%)
  background-color rgba(255, 255, 255, 0.7)
  z-index 10

  &.show
    display block
    opacity 1

  .modalTitle
    padding-left $spacerBase
    margin-bottom $spacerBase

  .modal
    transition all 0.5s
    top 0
    left 50%
    width 80%
    max-height 500px
    transform translateX(-50%)
    position fixed
    overflow hidden
    background-color white

  .inlineTabs
    display flex
    margin-bottom $spacerBase
    li
      display flex
      font-weight bold
      a
        padding $miniSpacer
        color $colorText

      &.active
        a
          color $colorLink
          border-bottom 3px solid $colorLink

.reviewsItem
  display -webkit-box
  display -webkit-flex
  display -ms-flexbox
  display flex
  flex-direction column

  .customerProfile
    flex 1
  .customerMessage
    flex 2



@media only screen and (min-width: $screen-md)
  .reviewsItem
    flex-direction row
