.btn-primary
  background-color $colorPrimary
  color $white
  &:hover
    color $white
    background-color lighten($colorPrimary, 30%)

.btn-sell
  color $gray
  &:hover
    color lighten($gray, 30%)

.imgBtn-header
  &.login
    .icon
      &:before
        background-position 0 0
        background-image url('../medias/icons/user.svg')

  &.cart
    .icon
      &:before
        background-position 0 0
        background-image url('../medias/icons/cart.svg')
  &.list
    .icon
      &:before
        background-position 6px 6px
        background-image url('../medias/icons/list.svg')

  &.grid
    .icon
      &:before
        background-position 6px 6px
        background-image url('../medias/icons/grid.svg')

.imgBtn.list, .imgBtn.grid
  width 30px
  height 30px
  align-self center
  margin-right $spacerBase




@media only screen and (min-width: $screen-md)
  .imgBtn-header
    &.login
      .icon
        &:before
          background-position 0 0px

    &.cart
      .icon
        &:before
          background-position 0 0px
