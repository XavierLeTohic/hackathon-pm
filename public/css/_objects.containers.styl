
.box 
	background-color $white 
	box-sizing: border-box
	border-radius $radius
	margin-bottom $spacerBase
	padding $spacerBase 

.flexContainer 
	display flex
	flex-direction row
	flex-wrap wrap


.listing
	width 100%

.buybox
	width 100%
@media only screen and (min-width: $screen-md) 
	.listing
		width 28%
		margin-right 2%

	.buybox
		width 70%
	
